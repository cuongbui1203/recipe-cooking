{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@constants":["src/common/constants/index"],
      "@entities": ["src/entities/index"],
      "@entities/*": ["src/entities/*"],
      "@middlewares": ["src/common/middlewares/index"],
      "@types": ["src/common/types/type.d"],
      "@decorators": ["src/common/decorators/index"],
      "@validators": ["src/common/validators/index"],
      "@pipes": ["src/common/pipes/index"],
      "@enums/*":["src/common/enums/*"],
      "@interceptors/*":["src/common/interceptors/*"],
      "@utilities": ["src/common/utilities/index"],
      "@interfaces": ["src/interfaces/index"],
      "@common/*": ["src/common/*"],
      "@repositories": ["src/repositories/index"],
      "@config": ["src/config/index"],
      "@modules/*": ["src/modules/*"],
      "@modules": ["src/modules/index"],
      "@consumers":["src/consumers/index"],
      "@guards": ["src/guards/index"],
      "@/*": ["src/*"]
    }
  }
}
